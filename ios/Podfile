platform :ios, '13.0'

# CocoaPods analytics sends network stats (optional)
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Load Flutter's pod helper (required for Flutter)
require File.expand_path(File.join('Flutter', 'podhelper.rb'), __dir__)

target 'Runner' do
  use_frameworks!

  # Install Flutter and additional pods
  flutter_install_all_pods(File.dirname(File.realpath(__FILE__)))

  # Additional Pods (e.g., Firebase)
  pod 'Firebase/Core'
  pod 'Firebase/Firestore'
  pod 'Firebase/Auth'
  pod 'Firebase/Messaging'
  pod 'Firebase/Database'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    if target.platform_name == :ios
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      end
    end
  end
end

platform :ios, '13.0'

use_frameworks!

# Set the relative path to the Flutter project root
flutter_application_path = '../../'

# Load the Flutter environment export file (itâ€™s typically generated by Flutter)
load File.join(flutter_application_path, '.flutter', 'flutter_export_environment.sh')

target 'Runner' do
  use_frameworks!

  # Point to the Flutter engine directory
  pod 'Flutter', :path => File.join(flutter_application_path, '.flutter', 'engine')

  # Add other pods as needed (e.g., Firebase)
  pod 'Firebase/Core'
  pod 'Firebase/Firestore'
end

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
         LaunchTheme is applied to the Android window at startup (before Flutter loads).
         It uses our custom launch_background.xml, which in turn references splash_bg.png
         with gravity="fill" to cover the entire screen.
    -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <!--
         NormalTheme is applied once the Flutter engine is initialized.
         It uses the system's default background.
    -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
